{
  "name": "coderabbit-cli-mcp",
  "version": "0.1.2",
  "description": "Model Context Protocol server that exposes the CodeRabbit CLI with full bootstrap, auth, and diagnostics tooling.",
  "type": "module",
  "bin": {
    "coderabbit-cli-mcp": "bin/coderabbit-cli-mcp"
  },
  "main": "dist/server.js",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    }
  },
  "files": [
